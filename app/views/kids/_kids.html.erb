<%- @kids.each do |kid| %>

    <li class="<%= @hidden ? 'hidden' : '' %>">
      <!-- card -->
      <div class="popup__open card <%= kid.get_class_kid %>" data-popup="card" id="<%= kid.id %>">

        <!-- card__pic -->
        <div class="card__pic">
          <img src="<%= kid.try(:thumb) %>" alt="">

          <!-- card__time -->
          <div class="card__time">00:<%= kid.video_duration.to_i %></div>
          <!-- /card__time -->
          
        </div>
        <!-- /card__pic -->

        <!-- card__name -->
        <div class="card__name"><%= kid.name %>, <span><%= pluralize(kid.age, 'год') %></span></div>
        <!-- /card__name -->

        <!-- card__place -->
        <div class="card__place"><%= kid.address %></div>
        <!-- /card__place -->

      </div>
      <!-- /card -->

    </li>

<% end %>