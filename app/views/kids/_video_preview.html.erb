 <!-- kid__video -->
  <div class="kid__video">

    <video controls>
      <source src=" <%= @kid.actual_video_url %>" type="video/mp4">
      Your browser does not support the video tag.
    </video>

  </div>
  <!-- /kid__video -->
 <%= tweet_button(via: "peterc", url: @url, text: "AWESOME.") %>
 <%= like_button ENV["facebook_app_id"],
                 action: 'like',
                 href: @url,
                 layout: :button_count,
                 send: true  %>
  <!-- kid__info -->
  <div class="kid__info">
    <div class="card__name"><%= @kid.name %>, <span><%= "#{@kid.age} #{t('custom.year', count: @kid.age)}" %></span></div>
  </div>
  <!-- /kid__info -->
  <!-- kid__info -->
  <div class="kid__info">
    <div class="card__place"><%= @kid.address %></div>
  </div>
  <!-- /kid__info -->

  <!-- kid__description -->
  <div class="kid__description"><%= @kid.description %></div>
  <!-- /kid__description -->

  <!-- kid__buttons -->
  <div class="kid__buttons">
    <%- if current_user %>
      <%= render 'kids/kids_buttons', :@kid => @kid %>
    <% end %>
  </div>
  <!-- /kid__buttons -->

 <!-- kid__share -->
 <div class="kid__share" data-kid="<%= "{ \"name\": \"#{ @kid.name }\", \"photo\": \"#{@kid.try(:thumb) }\", \"tweet\": \"#{@kid.tweet_image_url}\"  }" %>">

   <a href="#" target="_blank" class="share_vk"></a>
   <a href="#" target="_blank" class="share_f"></a>
   <a href="#" target="_blank" class="share_t"></a>

 </div>
 <!-- /kid__share -->

</div>