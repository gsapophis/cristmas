 <!-- kid__video -->
  <div class="kid__video">

    <video controls>
      <source src=" <%= @kid.status =='delivered' ? @kid.feedback_video.try(:url, 'mp4') : @kid.video.try(:url, 'mp4') %>" type="video/mp4">
      Your browser does not support the video tag.
    </video>

  </div>
  <!-- /kid__video -->

  <!-- kid__info -->
  <div class="kid__info">
    <div class="card__name"><%= @kid.name %>, <span><%= "#{@kid.age} #{t('custom.year', count: @kid.age)}" %></span></div>
  </div>
  <!-- /kid__info -->
  <!-- kid__info -->
  <div class="kid__info">
    <div class="card__place"><%= @kid.address %></div>
  </div>
  <!-- /kid__info -->

  <!-- kid__description -->
  <div class="kid__description"><%= @kid.description %></div>
  <!-- /kid__description -->

  <!-- kid__buttons -->
  <div class="kid__buttons">
    <%- if current_user %>
      <%= render 'kids/kids_buttons', :@kid => @kid %>
    <% end %>
  </div>
  <!-- /kid__buttons -->

 <!-- kid__share -->
 <div class="kid__social">
   <div>
     <%= tweet_button(via: "peterc", url: @url, text: @kid.name) %>
   </div>
   <div>
     <%= like_button 1518935931767463,
                     action: 'like',
                     href: @url,
                     send: true  %>
   </div>
 </div>
 <!-- /kid__share -->

</div>