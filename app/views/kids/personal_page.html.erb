<!-- site -->
<div class="site site_inner">

  <!-- site__header -->
  <header class="site__header">
    <!-- site__header-wrap -->
    <div class="site__header-wrap">

      <!-- site__header-inner -->
      <div class="site__header-inner">

        <!-- logo -->
        <h1 class="logo">
          <img src="/assets/logo.png" alt="Good Deal"/>
        </h1>
        <!-- /logo -->

      </div>
      <!-- /site__header-inner -->

    </div>
    <!-- /site__header-wrap -->
  </header>
  <!-- /site__header -->

  <!-- site__content -->
  <div class="site__content">

    <!-- cards -->
    <div class="cards">

      <h2>добро пожаловать в личный кабинет</h2>

      <!-- cards__filter -->
      <div class="cards__filter">
        <a href="#" class="active">Все</a>
        <a href="#">Ожидают</a>
        <a href="#">Отправили</a>
        <a href="#">Получили</a>
      </div>
      <!-- /cards__filter -->

      <ul>
        <%= render 'kids/kids', :@kids => @kids %>
      </ul>

      <!-- cards__more -->
      <form class="cards__more" action="<%= home_index_path %>">

        <!-- btn -->
        <button class="btn">
          Показать еще
        </button>
        <!-- /btn -->

      </form>
      <!-- /cards__more -->

    </div>
    <!-- /cards -->

    <!-- site__foter -->
    <footer class="site__foter"></footer>
    <!-- /site__foter -->

  </div>
  <!-- /site__content -->

</div>
<!-- /site -->

<!-- preloader -->
<div class="preloader">
  <div></div>
  <img src="/assets/logo_big.png" alt="Preloader" width="120" height="71"/>
</div>
<!-- /preloader -->