<!-- site -->
<div class="site site_inner">
  <%= render 'layouts/header' %>

  <!-- site__content -->
  <div class="site__content">

    <!-- cards -->
    <div class="cards">

      <h2>добро пожаловать в личный кабинет</h2>

      <!-- cards__filter -->
      <div class="cards__filter">
        <a href="#" class="active">Все</a>
        <a href="#">Ожидают</a>
        <a href="#">Отправили</a>
        <a href="#">Получили</a>
      </div>
      <!-- /cards__filter -->

      <ul>
        <%= render 'kids/kids', :@kids => @kids %>
      </ul>

      <!-- cards__more -->
      <form class="cards__more" action="/kids/personal_page">
      <%- if @kids.size > 6 %>
        <!-- btn -->
        <button class="btn">
          Показать еще
        </button>
        <!-- /btn -->
      <% end %>
      </form>
      <!-- /cards__more -->

    </div>
    <!-- /cards -->

    <%= render 'layouts/footer' %>

  </div>
  <!-- /site__content -->

</div>
<!-- /site -->

<!-- preloader -->
<div class="preloader">
  <div></div>
  <img src="/assets/logo_big.png" alt="Preloader" width="120" height="71"/>
</div>
<!-- /preloader -->
